
import random
import string


print('hello, Welcome to Password generator!')
print('Alt Version Created by Nora')

while True:
    try:
        len = int(input("Enter password length:"))
        break
    except ValueError:
        print("Only numbers are allowed.")
    continue
print()


#define data
lower = string.ascii_lowercase
upper = string.ascii_uppercase
num = string.digits
symbols = string.punctuation
#string.ascii_letters

#combine the data
all = lower + num + symbols + upper

#use random 
temp = random.sample(all,len)

#create the password 
password = "".join(temp)



